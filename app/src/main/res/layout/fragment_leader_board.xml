<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.LeaderBoardFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:background="@drawable/yourcurrentrank"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_20"
        android:drawableEnd="@drawable/weekly"
        android:text="@string/refer_and_earn_leaders"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/weekly" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOfLeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="450dp"/>

    <Button
        android:id="@+id/btnReferNowLeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/orange"
        android:text="@string/refer_now"
        android:textColor="@color/white" />
</LinearLayout>