<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.GadgetsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDevices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10.1"
            android:background="@color/faded_white"
            android:padding="@dimen/dp_10.1"
            android:text="Devices"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16.1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivSmartPhones"
            android:layout_width="65dp"
            android:layout_height="90dp"
            android:layout_margin="@dimen/dp_15.1"
            android:src="@drawable/smart_phones"
            app:layout_constraintEnd_toStartOf="@id/ivTablets"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDevices" />

        <TextView
            android:id="@+id/tvSmartPhones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7.1"
            android:text="Smart Phones"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@id/ivSmartPhones"
            app:layout_constraintStart_toStartOf="@id/ivSmartPhones"
            app:layout_constraintTop_toBottomOf="@id/ivSmartPhones" />

        <ImageView
            android:id="@+id/ivTablets"
            android:layout_width="65dp"
            android:layout_height="90dp"
            android:layout_margin="@dimen/dp_15.1"
            android:src="@drawable/tablets"
            app:layout_constraintEnd_toStartOf="@id/ivLaptops"
            app:layout_constraintStart_toEndOf="@id/ivSmartPhones"
            app:layout_constraintTop_toBottomOf="@id/tvDevices" />

        <TextView
            android:id="@+id/tvTablets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7.1"
            android:text="Tablets"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@id/ivTablets"
            app:layout_constraintStart_toStartOf="@id/ivTablets"
            app:layout_constraintTop_toBottomOf="@id/ivTablets" />

        <ImageView
            android:id="@+id/ivLaptops"
            android:layout_width="65dp"
            android:layout_height="90dp"
            android:layout_margin="@dimen/dp_15.1"
            android:src="@drawable/laptops_tablets"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivTablets"
            app:layout_constraintTop_toBottomOf="@id/tvDevices" />

        <TextView
            android:id="@+id/tvLaptops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7.1"
            android:text="Laptops"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@id/ivLaptops"
            app:layout_constraintStart_toStartOf="@id/ivLaptops"
            app:layout_constraintTop_toBottomOf="@id/ivLaptops" />

        <TextView
            android:id="@+id/tvAccessories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10.1"
            android:layout_marginTop="@dimen/dp_15.1"
            android:background="@color/faded_white"
            android:padding="@dimen/dp_10.1"
            android:text="Accessories"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16.1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSmartPhones" />

        <ImageView
            android:id="@+id/ivCasesCovers"
            android:layout_width="65dp"
            android:layout_height="90dp"
            android:layout_margin="@dimen/dp_15.1"
            android:src="@drawable/cases"
            app:layout_constraintEnd_toStartOf="@id/ivTablets"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAccessories" />

        <TextView
            android:id="@+id/tvCasesCovers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7.1"
            android:text="@string/cases_covers"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@id/ivCasesCovers"
            app:layout_constraintStart_toStartOf="@id/ivCasesCovers"
            app:layout_constraintTop_toBottomOf="@id/ivCasesCovers" />

        <ImageView
            android:id="@+id/ivChargers"
            android:layout_width="65dp"
            android:layout_height="90dp"
            android:layout_margin="@dimen/dp_15.1"
            android:src="@drawable/chargers"
            app:layout_constraintEnd_toStartOf="@id/ivLaptops"
            app:layout_constraintStart_toEndOf="@id/ivSmartPhones"
            app:layout_constraintTop_toBottomOf="@id/tvAccessories" />

        <TextView
            android:id="@+id/tvChargers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7.1"
            android:text="Chargers"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@id/ivChargers"
            app:layout_constraintStart_toStartOf="@id/ivChargers"
            app:layout_constraintTop_toBottomOf="@id/ivChargers" />

        <ImageView
            android:id="@+id/ivHeadphones"
            android:layout_width="65dp"
            android:layout_height="90dp"
            android:layout_margin="@dimen/dp_15.1"
            android:src="@drawable/headphones"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivTablets"
            app:layout_constraintTop_toBottomOf="@id/tvAccessories" />

        <TextView
            android:id="@+id/tvHeadphones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7.1"
            android:text="Headphones"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@id/ivHeadphones"
            app:layout_constraintStart_toStartOf="@id/ivHeadphones"
            app:layout_constraintTop_toBottomOf="@id/ivHeadphones" />

        <TextView
            android:id="@+id/tvElectronics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10.1"
            android:layout_marginTop="@dimen/dp_15.1"
            android:background="@color/faded_white"
            android:padding="@dimen/dp_10.1"
            android:text="Electronics"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16.1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCasesCovers" />

        <ImageView
            android:id="@+id/ivHomeAppliances"
            android:layout_width="65dp"
            android:layout_height="90dp"
            android:layout_margin="@dimen/dp_15.1"
            android:src="@drawable/home_appliances"
            app:layout_constraintEnd_toStartOf="@id/ivTablets"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvElectronics" />

        <TextView
            android:id="@+id/tvHomeAppliances"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7.1"
            android:text="Home Appliances"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@id/ivHomeAppliances"
            app:layout_constraintStart_toStartOf="@id/ivHomeAppliances"
            app:layout_constraintTop_toBottomOf="@id/ivHomeAppliances" />

        <ImageView
            android:id="@+id/ivTelevision"
            android:layout_width="65dp"
            android:layout_height="90dp"
            android:layout_margin="@dimen/dp_15.1"
            android:src="@drawable/television"
            app:layout_constraintEnd_toStartOf="@id/ivLaptops"
            app:layout_constraintStart_toEndOf="@id/ivSmartPhones"
            app:layout_constraintTop_toBottomOf="@id/tvElectronics" />

        <TextView
            android:id="@+id/tvTelevision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7.1"
            android:text="Television"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@id/ivTelevision"
            app:layout_constraintStart_toStartOf="@id/ivTelevision"
            app:layout_constraintTop_toBottomOf="@id/ivTelevision" />

        <ImageView
            android:id="@+id/ivCameras"
            android:layout_width="65dp"
            android:layout_height="90dp"
            android:layout_margin="@dimen/dp_15.1"
            android:src="@drawable/cameras"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivTablets"
            app:layout_constraintTop_toBottomOf="@id/tvElectronics" />

        <TextView
            android:id="@+id/tvCameras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7.1"
            android:text="Cameras"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@id/ivCameras"
            app:layout_constraintStart_toStartOf="@id/ivCameras"
            app:layout_constraintTop_toBottomOf="@id/ivCameras" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>