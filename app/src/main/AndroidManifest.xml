<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shopclues_clone">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Shopcluesclone">
        <activity android:name=".activities.MyOrdersActivity"></activity>
        <activity android:name=".activities.CartActivity" />
        <activity android:name=".activities.CongratulationActivity" />
        <activity android:name=".activities.EnterOtpActivity" />
        <activity android:name=".activities.EnterPhoneNumberActivity" />
        <activity android:name=".activities.CheckoutActitivity" />
        <activity android:name=".activities.AddAddressActivity" />
        <activity android:name=".activities.ProvideAddressActivity" />

        <service
            android:name=".services.ReadProductFromAssetsService"
            android:exported="false" />

        <activity android:name=".activities.ProductDetailPage" />
        <activity android:name=".activities.ProductsPage" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>